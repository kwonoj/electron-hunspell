{
  "name": "electron-hunspell",
  "version": "0.0.8",
  "description": "Providing hunspell based spellchecker for Electron applications",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write --single-quote --print-width 120 --jsx-bracket-same-line true",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "prepublishOnly": "npm-run-all build test",
    "precommit": "lint-staged",
    "prepush": "npm-run-all build test",
    "commitmsg": "commitlint -e",
    "test": "jest --config jest.json --coverage",
    "lint": "tslint --type-check -c tslint.json -p tsconfig.json \"src/**/*.ts\" \"spec/**/*.ts\"",
    "lint:staged": "lint-staged",
    "build": "shx rm -rf ./dist && tsc",
    "build:clean": "shx rm -rf ./dist",
    "commit": "git-cz -S",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/electron-hunspell.git"
  },
  "keywords": [
    "electron",
    "hunspell",
    "spellchecker",
    "spell",
    "language"
  ],
  "author": "OJ Kwon <kwon.ohjoong@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/electron-hunspell/issues"
  },
  "homepage": "https://github.com/kwonoj/electron-hunspell#readme",
  "devDependencies": {
    "@commitlint/cli": "7.0.0",
    "@commitlint/config-angular": "^7.0.1",
    "@types/chai": "^4.1.4",
    "@types/jest": "23.1.2",
    "@types/lodash.orderby": "4.6.3",
    "@types/node": "10.3.6",
    "chai": "^4.1.2",
    "commitizen": "2.10.1",
    "conventional-changelog-cli": "2.0.1",
    "cz-conventional-changelog": "2.1.0",
    "electron": "2.0.3",
    "husky": "0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "7.2.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.13.6",
    "shx": "0.3.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-no-unused-expression-chai": "0.1.3",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "hunspell-asm": "1.0.2",
    "lodash.orderby": "4.6.0",
    "tslib": "1.9.3",
    "unixify": "1.0.0"
  }
}
