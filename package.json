{
  "name": "electron-hunspell",
  "version": "0.0.9",
  "description": "Providing hunspell based spellchecker for Electron applications",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write --single-quote --print-width 120 --jsx-bracket-same-line true",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "prepublishOnly": "npm-run-all build test",
    "test": "jest --config jest.json --coverage",
    "lint": "tslint --type-check -c tslint.json -p tsconfig.json \"src/**/*.ts\" \"spec/**/*.ts\"",
    "lint:staged": "lint-staged",
    "build": "shx rm -rf ./dist && npm-run-all build:cjs build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig_esm.json",
    "build:clean": "shx rm -rf ./dist",
    "commit": "git-cz -S",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/electron-hunspell.git"
  },
  "keywords": [
    "electron",
    "hunspell",
    "spellchecker",
    "spell",
    "language"
  ],
  "author": "OJ Kwon <kwon.ohjoong@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/electron-hunspell/issues"
  },
  "homepage": "https://github.com/kwonoj/electron-hunspell#readme",
  "devDependencies": {
    "@commitlint/cli": "7.1.2",
    "@commitlint/config-angular": "^7.1.2",
    "@types/chai": "^4.1.6",
    "@types/jest": "23.3.3",
    "@types/node": "^10.11.4",
    "chai": "^4.2.0",
    "commitizen": "3.0.2",
    "conventional-changelog-cli": "^2.0.5",
    "cz-conventional-changelog": "2.1.0",
    "electron": "3.0.2",
    "husky": "1.1.0",
    "jest": "^23.6.0",
    "jest-spin-reporter": "^1.0.2",
    "lint-staged": "7.3.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.14.3",
    "shx": "0.3.2",
    "ts-jest": "^23.10.3",
    "tslint": "^5.11.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "hunspell-asm": "1.0.2",
    "lodash": "^4.17.11",
    "tslib": "1.9.3",
    "unixify": "1.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged",
      "pre-push": "npm-run-all build test"
    }
  }
}
